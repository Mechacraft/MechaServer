{
    "namespace": "hud",
    "hud_actionbar_text": {
        "type": "image",
        "size": ["100%c + 12px", "100%c + 15px"],
        "offset": ["35px", "5px"],
        "anchor_from": "right_middle",
        "anchor_to": "right_middle",
        "texture": "textures/ui/hud_tip_text_background",
        "alpha": "@hud.anim_actionbar_text_background_alpha_out",
        "controls": [
            {
                "actionbar_message": {
                    "type": "label",
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "color": "$tool_tip_text",
                    "layer": 31,
                    "text": "$actionbar_text",
                    "localize": false,
                    "alpha": "@hud.anim_actionbar_text_alpha_out"
                }
            }
        ]
    }
}
